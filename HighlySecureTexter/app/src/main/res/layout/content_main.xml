<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aut.android.highlysecuretexter.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Recipent"
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:id="@+id/textView5"
            android:textAlignment="gravity"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="match_parent"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numberInput"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sendButton" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearSend"
        android:layout_below="@+id/top"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp">

        <TextView
            android:text="Send a Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_below="@+id/numberInput"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/messageInput"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_height="100dp"
            android:layout_above="@+id/sendButton" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/messageInput"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true">

            <Button
                android:text="Send Message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sendButton"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.61" />

            <Button
                android:text="Clear Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/messageInput"
                android:layout_alignParentEnd="true"
                android:id="@+id/clear1"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinDecrypt"
        android:layout_below="@+id/LinearSend"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp">

        <TextView
            android:text="Decode a Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_below="@+id/sendButton"
            android:layout_alignEnd="@+id/textView"
            android:layout_weight="1.15" />

        <EditText
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/cipherInput"
            android:background="@android:drawable/edit_text"
            android:layout_height="100dp"
            android:layout_weight="3.19"
            android:layout_alignStart="@+id/textView6" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.15">

            <Button
                android:text="Decipher Message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/decryptButton"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.23" />

            <Button
                android:text="Clear Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/messageInput"
                android:layout_alignParentEnd="true"
                android:id="@+id/clear2"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
