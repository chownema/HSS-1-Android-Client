<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aut.android.highlysecuretexter.LoginActivity">


    <TextView
        android:text="Secure Texter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="50sp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="30sp"
        android:textAlignment="center"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connect_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="185dp" />

    <TextView
        android:text="Mobile Number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="30sp"
        android:textAlignment="center"
        android:typeface="sans"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/phone_edit_text"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginStart="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:id="@+id/phone_edit_text"
        android:text="0211245734"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/connect_button"
        android:layout_toEndOf="@+id/connect_button" />

</RelativeLayout>
